{
  "name": "Cornet.JS",
  "version": "0.2.1",
  "description": "The Humane JavaScript Library for Modern and Honest Web Notifications. An open source project by Toby56 under the GNU General Public License.",
  "main": "cornet.js",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/Cornet-JS/Cornet.JS.git"
  },
  "author": "Toby56",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/cornet-js/Cornet.JS/issues"
  },
  "homepage": "https://cornet-js.github.io/",
  "scripts": {
    "test": "xo"
  },
  "devDependencies": {
    "bithound": "^1.7.0",
    "xo": "^0.18.2",
    "eslint": "^4.4.1",
    "showdown": "^1.7.2",
    "html5-to-pdf": "^2.2.4",
    "uglify-js": "^3.0.28"
  },
  "xo": {
    "rules": {
      "quotes": [
        1,
        "double"
      ],
      "quote-props": [
        1,
        "consistent-as-needed"
      ],
      "no-var": 0,
      "object-shorthand": 0,
      "prefer-arrow-callback": 0,
      "no-prototype-builtins": 0,
      "no-warning-comments": [
        0,
        {
          "terms": [
            "todo",
            "fixme"
          ],
          "location": "start"
        }
      ]
    },
    "semicolon": true,
    "space": 2,
    "envs": [
      "browser",
      "node"
    ],
    "ignores": [
      "**.min.js",
      "**.html",
      "**/lib/**.js"
    ]
  }
}
